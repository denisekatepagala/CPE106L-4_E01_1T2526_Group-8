
import random
from student import Student  # Make sure student.py is in the same folder

def __lt__(self, other):
    return self.name < other.name

Student.__lt__ = __lt__

def demo_students():
    students = [
        Student("Alice", 3),
        Student("Bob", 3),
        Student("Charlie", 3),
        Student("Diana", 3),
        Student("Ken", 3)
    ]
    for idx, student in enumerate(students):
        for i in range(1, 4):
            student.setScore(i, 70 + 10 * idx + i)
    print("Original order:")
    for s in students:
        print(s)
        print()
    random.shuffle(students)
    print("After shuffling:")
    for s in students:
        print(s)
        print()
    students.sort()
    print("After sorting by name:")
    for s in students:
        print(s)
        print()

if __name__ == "__main__":
    # main()  # Remove or comment out this line
    print("\n--- Demo Students ---\n")
    demo_students()
